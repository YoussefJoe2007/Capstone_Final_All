@model UsersApp.Models.MedicalForm
@{
    ViewData["Title"] = "Medical Form Details";
    Layout = "_Layout";
}

<div class="container-fluid py-4" style="background:#f8f9fa;min-height:100vh;">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-file-medical me-2"></i>
                            Medical Form Details
                        </h4>
                        <div class="text-end">
                            <small>Form #@Model.Id</small><br>
                            <small>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Doctor Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <h6 class="alert-heading">
                                    <i class="fas fa-user-md me-2"></i>Doctor Information
                                </h6>
                                <p class="mb-1"><strong>Doctor:</strong> @Model.Doctor.FirstName @Model.Doctor.LastName</p>
                                <p class="mb-0"><strong>Speciality:</strong> @Model.Doctor.Speciality</p>
                            </div>
                        </div>
                    </div>

                    <!-- Patient Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-user me-2"></i>Patient Information
                            </h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Full Name:</strong> @Model.FullName</p>
                                    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
                                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Address:</strong> @Model.Address</p>
                                    <p><strong>Height:</strong> @Model.Height</p>
                                    <p><strong>Weight:</strong> @Model.Weight</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Medical Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-heartbeat me-2"></i>Medical Information
                            </h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Blood Type:</strong> @Model.BloodType</p>
                                    <p><strong>Allergies:</strong> @(string.IsNullOrEmpty(Model.Allergies) ? "None" : Model.Allergies)</p>
                                    <p><strong>Chronic Diseases:</strong> @(string.IsNullOrEmpty(Model.ChronicDiseases) ? "None" : Model.ChronicDiseases)</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Current Medications:</strong> @(string.IsNullOrEmpty(Model.CurrentMedications) ? "None" : Model.CurrentMedications)</p>
                                    <p><strong>Family History:</strong> @(string.IsNullOrEmpty(Model.FamilyHistory) ? "None" : Model.FamilyHistory)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Current Symptoms -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-stethoscope me-2"></i>Current Symptoms
                            </h5>
                            <div class="alert alert-light">
                                @(string.IsNullOrEmpty(Model.CurrentSymptoms) ? "No symptoms reported" : Model.CurrentSymptoms)
                            </div>
                        </div>
                    </div>

                    <!-- Additional Notes -->
                    @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="fas fa-notes-medical me-2"></i>Additional Notes
                                </h5>
                                <div class="alert alert-light">
                                    @Model.AdditionalNotes
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="row">
                        <div class="col-12 text-center">
                            <a href="@Url.Action("MedicalForms", "PatientDashboard")" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left me-1"></i>Back to Forms
                            </a>
                            <button onclick="window.print()" class="btn btn-primary">
                                <i class="fas fa-print me-1"></i>Print
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn, .card-header {
            display: none !important;
        }
        .card {
            border: none !important;
            box-shadow: none !important;
        }
        .container-fluid {
            background: white !important;
        }
    }
</style> 