@model UsersApp.ViewModels.ExternalRoleViewModel

@{
    ViewData["Title"] = "Choose Role";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 18px;">
        <h2 class="text-center mb-4 font-weight-bold">Choose Your Role</h2>
        <form asp-action="ExternalRole" method="post">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Full Name</label>
                <input asp-for="FullName" class="form-control" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="form-label font-weight-bold"></label>
                <select asp-for="Role" class="form-control" style="min-width: 100%;">
                    <option value="Patient" selected>Patient</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-3">Continue</button>
        </form>
    </div>
</div> 